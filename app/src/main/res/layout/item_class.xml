<!-- item_lesson.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Lesson Image -->
    <ImageView
        android:id="@+id/lessonImage"
        android:layout_width="80dp"
        android:layout_height="115dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/blackpink___kill_this_love" />

    <!-- Text Content and Buttons -->
    <LinearLayout
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Lesson Title -->
        <TextView
            android:id="@+id/lessonTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lesson Title"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Lesson Content Preview -->
        <TextView
            android:id="@+id/lessonContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Lesson content preview goes here..."
            android:textColor="#666"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/lessonTeacherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teacher: John Doe"
            android:textColor="#333"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="start"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="69dp"
                android:layout_height="38dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:padding="2dp"
                android:text="Edit"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="69dp"
                android:layout_height="38dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                android:padding="2dp"
                android:text="Delete"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
